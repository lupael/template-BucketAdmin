      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
  %body.login-body
    .container
      %form.form-signin{:action => "index.html"}
        %h2.form-signin-heading registration now
        .login-wrap
          %p Enter your personal details below
          %input.form-control{:autofocus => "", :placeholder => "Full Name", :type => "text"}/
          %input.form-control{:autofocus => "", :placeholder => "Address", :type => "text"}/
          %input.form-control{:autofocus => "", :placeholder => "Email", :type => "text"}/
          %input.form-control{:autofocus => "", :placeholder => "City/Town", :type => "text"}/
          .radios
            %label.label_radio.col-lg-6.col-sm-6{:for => "radio-01"}
              %input#radio-01{:checked => "", :name => "sample-radio", :type => "radio", :value => "1"}/
              Male
            %label.label_radio.col-lg-6.col-sm-6{:for => "radio-02"}
              %input#radio-02{:name => "sample-radio", :type => "radio", :value => "1"}/
              Female
          %p Enter your account details below
          %input.form-control{:autofocus => "", :placeholder => "User Name", :type => "text"}/
          %input.form-control{:placeholder => "Password", :type => "password"}/
          %input.form-control{:placeholder => "Re-type Password", :type => "password"}/
          %label.checkbox
            %input{:type => "checkbox", :value => "agree this condition"}/
            I agree to the Terms of Service and Privacy Policy
          %button.btn.btn-lg.btn-login.btn-block{:type => "submit"} Submit
          .registration
            Already Registered.
            %a{:href => "login.html"}
              Login
    / Placed js at the end of the document so the pages load faster
    / Core js
    %script{:src => "js/lib/jquery.js"}
    %script{:src => "bs3/js/bootstrap.min.js"}
